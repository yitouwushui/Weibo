<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="1dp"
    android:onClick="homePage"
    android:padding="8dp"
    tools:context=".main.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/header_Icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="homePage"
        fresco:roundedCornerRadius="180dp"
        fresco:roundingBorderColor="@color/colorBlue"
        fresco:roundingBorderWidth="1dp" />


    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/introduce"
        android:layout_alignStart="@+id/introduce"
        android:layout_alignTop="@+id/header_Icon"
        android:layout_marginTop="8dp"
        android:text="谈情说梦"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header_Icon"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/header_Icon"
        android:layout_toRightOf="@+id/header_Icon"
        android:text="简介:啥？你说啥？"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right" />

</RelativeLayout>
